{
    "name": "kws_res8_narrow_fine_tune",
    "n_gpu": 1,
    "n_class": 30,

    "model": {
        "type": "ResNarrowNet",
        "args": {
            "num_classes": 30,
            "n_layers": 6,
            "n_feature_maps": 19,
            "res_pool": [4, 3],
            "use_dilation": false
        }
    },
    "data_loader": {
        "type": "GoogleKeywordDataLoader",
        "args":{
            "data_dir": "/data/speech_dataset",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2,
            "unknown": true
        }
    },
    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 0.1,
            "weight_decay": 1e-4,
            "momentum": 0.9
        }
    },
    "loss": "logsoftmax_nll_loss",
    "metrics": [
        "pred_acc"
    ],
    "lr_scheduler": {
        "type": "MultiStepLR",
        "args": {
            "milestones": [4, 7],
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 10,
        "save_dir": "saved/",
        "save_period": 10,
        "verbosity": 2,

        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboardX": false,
        "log_dir": "saved/runs"
    }
}
