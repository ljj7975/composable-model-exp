{
    "name": "cifar100_fine_tune",
    "n_gpu": 1,
    "n_class": 100,

    "model": {
        "type": "DenseNet",
        "args": {
            "num_classes": 100,
            "depth": 40,
            "growth_rate": 12,
            "reduction": 1.0,
            "bottleneck": false
        }
    },
    "data_loader": {
        "type": "Cifar100DataLoader",
        "args":{
            "data_dir": "/data/cifar100",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2,
            "unknown": true
        }
    },
    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 0.1,
            "weight_decay": 1e-4,
            "nesterov": true,
            "momentum": 0.9
        }
    },
    "loss": "logsoftmax_nll_loss",
    "metrics": [
        "pred_acc"
    ],
    "lr_scheduler": {
        "type": "MultiStepLR",
        "args": {
            "milestones": [40, 70],
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,

        "monitor": "min val_loss",
        "early_stop": 100,

        "tensorboardX": false,
        "log_dir": "saved/runs"
    }
}
