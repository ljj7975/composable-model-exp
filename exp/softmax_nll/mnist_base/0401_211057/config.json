{
    "name": "mnist_base",
    "n_gpu": 1,
    "model": {
        "type": "LeNet",
        "args": {}
    },
    "data_loader": {
        "type": "MnistDataLoader",
        "args": {
            "data_dir": "/media/brandon/SSD/data/mnist",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2,
            "seed": 10
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "softmax_nll_loss",
    "metrics": [
        "pred_acc",
        "top_pred_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 5,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboardX": true,
        "log_dir": "saved/runs"
    }
}